extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-grey
        h3 CLAV
      .w3-container
        p Aplicação gerada para navegar registos de CLAV
      .w3-card-4
        header.w3-container.w3-grey
          h1 Lista de classes
        table.w3-table-all
          tr
            th Código
            th Titulo
            th ID
          each c in classes
            tr
              td
                p= c.codigo
              td
                p= c.titulo
              td
                p= c.id
        footer.w3-container.w3-grey
          a(href='http://localhost:3000/') Voltar à página principal
