extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-blue-grey
                h3 iBanda - Arquivo de Música Digital
            .w3-container
                table.w3-table.w3-bordered
                    tr
                        th Tipo
                        th Lista de Músicas
                    - var n = 0;
                    each t in root.marchas
                        tr
                            td #{Object.keys(root.marchas)[n++]}
                            td
                                ul
                                    each block in t
                                        li= block["titulo"]
                                        ul
                                            li    
                                                a(href="http://localhost:2727/consumer/obras/download/" + block["_id"]) Download
                                            li
                                                a(href="http://localhost:2727/consumer/obras/nav/" + block["_id"]) Navegação por Website
        footer.w3-container.w3-blue-grey
            a(href="/") Voltar à página principal
