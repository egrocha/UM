extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-blue-grey
                h3 Registo
        .w3-container
            form.w3-container(action='/registo', method='POST', id='registo_form')
                p
                label.w3-text-black
                    b Username
                input.w3-input.w3-border.w3-light-grey(type='text', name='username', id='registo_username')
                br
                label.w3-text-black
                    b Password
                input.w3-input.w3-border.w3-light-grey(type='password', name='password', id='registo_password')
                p
                input.w3-btn.w3-grey(type='submit', value='Enviar', id='registo_button')
                p
        footer.w3-container.w3-blue-grey
            a(href="/") Voltar à página principal