extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-black
                h1 Agenda
            header.w3-container.w3-black
                h3 Novo Evento:
            .w3-container
                p
                form.w3-container(method='POST' action='/admin/addEvento')
                    input.w3-input(type='text' name='titulo' placeholder='Título:')
                    input.w3-input(type='text' name='subtitulo' placeholder='Subtítulo:')
                    input.w3-input(type='text' name='data' placeholder='Data: AAAA-MM-DD')
                    input.w3-input(type='text' name='descricao' placeholder='Descrição:')
                    br
                    input.w3-btn.w3-grey(type='submit' value='Criar')
                    p
        br
        .w3-card-4
            header.w3-container.w3-black
                h3 Lista de Eventos
            .w3-container
                p
                each e in eventos
                    b Título: 
                    i= e.titulo
                    p
                    b Subtítulo: 
                    i= e.subtitulo
                    p
                    b Data: 
                    i= e.data
                    p
                    b Descrição: 
                    i= e.descricao
                    p
                    form(method='POST' action='/admin/removeEvento')
                        input(type='hidden' id='titulo' name='titulo' value=e.titulo)
                        input.w3-btn.w3-grey(type='submit' value='Remover')
                    hr.hrThick
        footer.w3-container.w3-black
            a(href="/admin") Voltar à página principal